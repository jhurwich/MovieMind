<h1>New movie</h1>

<% form_for(@movie) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <!-- Genre -->
  <p>
    <%= f.label :genre %><br />
    <%= render :partial => "genres/genre_selector",
               :locals => {:form => f}%>
  </p>

  <!-- Tags -->
  <p>
    <%= f.label :tags %><br />
    <%= render :partial => "tags/tag_selector",
               :locals => {:form => f} %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
